<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coba">

    <RelativeLayout
        android:background="@color/secondary_text"
        android:layout_marginBottom="12dp"

        android:id="@+id/chat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp"
        >






        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambar1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/patrick"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/petrik"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/gambar1"
            android:text="patrick jowo"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jam"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/petrik"
            android:text="18.00"
            android:textColor="@color/primary"
            android:textSize="16sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:background="@color/secondary_text"

        android:id="@+id/chat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chat1">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambar2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hitam"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/cecep"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/gambar2"
            android:text="Cecep"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jam2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/cecep"
            android:text="15.33"
            android:textColor="@color/primary"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:background="@color/secondary_text"
        android:id="@+id/chat3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chat2">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambar3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jengku"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/jengku"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/gambar3"
            android:text="Jengku"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jam3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/jengku"
            android:text="08.21"
            android:textColor="@color/primary"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:background="@color/secondary_text"
        android:id="@+id/chat4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chat3">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambar4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/saruto"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/saruto"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/gambar4"
            android:text="saruto"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jam4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/saruto"
            android:text="09.45"
            android:textColor="@color/primary"
            android:textSize="16sp" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>